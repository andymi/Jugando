extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Factura Venta de Animales
        small
          b 
            a(href="/web/facturaVenta/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Factura Venta") Agregar Factura Venta
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Venta de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Venta de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr
                      th(class="text-center") Fecha de la Venta
                      th(class="text-center") Hora de la Venta
                      th(class="text-center") Condición
                      th(class="text-center") Forma de Cobro 
                      th(class="text-center") Número de Venta 
                      th(class="text-center") Monto Total de la Venta 
                      th(class="text-center") Cliente
                      th(class="text-center") Ver Detalle
                      th(class="text-center") Eliminar Registro
                  
                  tbody
                    for facturaVentas in facturaVenta
                      tr
                        td(class="text-center")=facturaVentas.fechaVenta
                        td(class="text-center")=facturaVentas.horaVenta                        
                        td(class="text-center")=facturaVentas.condicionVenta
                        td(class="text-center")=facturaVentas.formaCobro
                        td(class="text-center")=facturaVentas.numeroVenta    
                        td(class="text-center")=facturaVentas.totalVenta    
                        if facturaVentas.Cliente == null  
                          td(class="text-center") sin Cliente
                        else 
                          td(class="text-center")=facturaVentas.Cliente.nombreCliente      
                        td(class="text-center")
                          a(href="/web/detalleVenta/#{facturaVentas.idVenta}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-eye") 
                        form(id="topicForm" method="post" action="/web/facturaVenta/#{facturaVentas.idVenta}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idVenta" value='#{facturaVentas.idVenta}')               
                          td(class="text-center")
                            a(href="/web/facturaVenta/#{facturaVentas.idVenta}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Factura Venta")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")