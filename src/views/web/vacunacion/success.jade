extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Vacunación de Animales
        small
          b 
            a(href="/web/vacunacion/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Vacunación") Agregar Vacunación
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Vacunación de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Vacunación de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Fecha de la Vacunación
                      th(class="cell-stat text-center") Hora de la Vacunación                       
                      th(class="cell-stat text-center") Cantidad Total 
                      th(class="cell-stat text-center") Veterinario
                      th(class="cell-stat text-center") Agregar Detalle
                      th(class="cell-stat text-center") Ver Detalle
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro
                  
                  tbody
                    for vacunaciones in vacunacion
                      tr
                        td(class="text-center")=vacunaciones.fechaVacunacion
                        td(class="text-center")=vacunaciones.horaVacunacion
                        td(class="text-center")=vacunaciones.cantidadTotal    
                        if vacunaciones.Proveedor == null  
                          td(class="text-center") sin Proveedor
                        else 
                          td(class="text-center")=vacunaciones.Proveedor.nombreProveedor  
                        td(class="text-center")
                          a(href="/web/detalleVacunacion/add/#{vacunaciones.idVacunacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Agregar Detalle Vacunación")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-plus")        
                        td(class="text-center")
                          a(href="/web/detalleVacunacion/animal/#{vacunaciones.idVacunacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-eye")

                        td(class="text-center")
                          a(href="/web/vacunacion/#{vacunaciones.idVacunacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Vacunación")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")

                        form(id="topicForm" method="post" action="/web/vacunacion/#{vacunaciones.idVacunacion}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idVacunacion" value='#{vacunaciones.idVacunacion}')               
                          td(class="text-center")
                            a(href="/web/vacunacion/#{vacunaciones.idVacunacion}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Vacunación")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")                           