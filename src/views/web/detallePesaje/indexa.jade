extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Detalle Pesaje del Animal
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Agregar Detalle Pesaje del Animal
    section(class="content")
      div(class="row")  
        div(class="col-md-12") 
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Registro Detalle Pesaje del Animal
            form(class="form-horizontal" action='/web/detallePesaje/add' method="POST") 
              div(class="box-body")
                input(type="hidden" name='id' value='#{pesajeN}')
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") RP Animal
                  div(class="col-sm-8")
                    select(name='selectJ' class="btn btn-default select2")
                      option(value="-1" disabled="disabled" selected) Seleccione una opción
                      -for(var j=0; j < selectJ.length; j++) {
                        option(value="#{selectJ[j].idAnimal}") #{selectJ[j].rpAnimal}
                      -} 
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Peso 
                  div(class="col-sm-8")
                    input(type="text" class="form-control" id="peso" name='peso'  placeholder="Ingrese el Peso")
                   
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Observación 
                  div(class="col-sm-8")
                    input(type="text"  class="form-control" id="observacion" name='observacion' placeholder="Ingrese la Observación")       
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Guardar
                    i(class="fa fa-save") 
                  a(href="/web/pesaje" class="btn btn-default") Listo
                    i(class="fa fa-remove")