extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Ingreso de Animales
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Editar Ingreso de Animales
    section(class="content")
      div(class="row")
        div(class="col-md-12")
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Edición del Ingreso de Animales
            form(class="form-horizontal" method="post" action="/web/ingresoAnimal/#{ingresoAnimal.idIngresoAnimal}")
              div(class="box-body")
                input(type="hidden" name="_method" value="put")
                input(type="hidden" name="idIngresoAnimal" value='#{ingresoAnimal.idIngresoAnimal}')
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="cuernos") Fecha de la Entrada:
                  div(class="col-sm-8")  
                    div(class="input-group date")
                      div(class="input-group-addon")
                        i(class="fa fa-calendar")  
                      input(type="text" class="form-control pull-right" id="datepicker" name='fechaEntrada' value='#{ingresoAnimal.fechaEntrada}' required="true")
                
                div(class="form-group")  
                  label(class="col-sm-4 control-label" for="horaEntrada") Hora de la Entrada:
                  div(class="col-sm-8")
                    div(class="bootstrap-timepicker")
                      div(class="input-group")
                        div(class="input-group-addon")
                          i(class="fa fa-clock-o")
                        input(type="text" class="form-control timepicker" name='horaEntrada' value='#{ingresoAnimal.horaEntrada}' required)
                div(class="form-group")  
                  label(class="col-sm-4 control-label" for="horaEntrada") Observación:
                  div(class="col-sm-8")
                    input(type="text" class="form-control" id='observacion' name='observacion' value='#{ingresoAnimal.observacion}' required="true")
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Editar
                    i(class="fa fa-save") 
                  a(href="/web/ingresoAnimal" class="btn btn-default") Cancelar
                    i(class="fa fa-remove")