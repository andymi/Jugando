extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Detalle de la Sanitación(Insumos) 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Detalle de la Sanitación de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Detalle de la Sanitación de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Nombre del Insumo                      
                      th(class="cell-stat text-center") Cantidad Utilizada
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro                 
                  tbody
                    for detalleSanitacion in detalleSanitaciones
                      tr
                        if detalleSanitacion.Insumo == null  
                          td(class="text-center") sin Insumo
                        else 
                          td(class="text-center")=detalleSanitacion.Insumo.nombreInsumo        
                        td(class="text-center")=detalleSanitacion.cantidadUtilizada  
                        td(class="text-center")
                          a(href="/web/detalleSanitacionInsumo/editar/#{detalleSanitacion.idDetalleSanitacionInsumo}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Detalle de la Sanitación(Insumo)")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")

                        form(id="topicForm" method="post" action="/web/detalleSanitacionInsumo/#{detalleSanitacion.idDetalleSanitacionInsumo}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idSanitacion" value='#{detalleSanitacion.idDetalleSanitacionInsumo}')               
                          td(class="text-center")
                            a(href="/web/detalleSanitacionInsumo/#{detalleSanitacion.idDetalleSanitacionInsumo}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Detalle de la Sanitación(Insumo)")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")