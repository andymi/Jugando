extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Cliente
        small
          b 
            a(href="/web/cliente/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Cliente") Agregar Cliente
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Clientes Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Clientes Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="text-center") RUC
                      th(class="text-center") Nombre
                      th(class="text-center") Direcci√≥n
                      th(class="text-center") Ciudad
                      th(class="text-center") Editar Registro
                      th(class="text-center") Eliminar Registro
                  tbody
                    for cliente in clientes
                      tr
                        td(class="text-center")=cliente.rucCliente                        
                        td(class="text-center")=cliente.nombreCliente
                        td(class="text-center")=cliente.direccionCliente
                        if cliente.Ciudad == null  
                          td(class="text-center") sin Ciudad
                        else 
                          td(class="text-center")=cliente.Ciudad.ciudad 
                        td(class="text-center")
                          a(href="/web/cliente/#{cliente.idCliente}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Cliente")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/cliente/#{cliente.idCliente}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idCliente" value='#{cliente.idCliente}')               
                          td(class="text-center")
                            a(href="/web/cliente/#{cliente.idCliente}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Cliente")
                                button(type="submit" name="committ" value="Form" class="btn btn-success")
                                  i(class="fa fa-remove")