extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Insumo
        small
          b 
            a(href="/web/insumo/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Insumo") Agregar Insumo
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Insumos Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Insumos Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")                
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr
                      th(class="text-center") Código de Barra
                      th(class="text-center") Nombre
                      th(class="text-center") Contenido
                      th(class="text-center") Precio de Compra
                      th(class="text-center") Tipo de Insumo
                      th(class="text-center") Presentación
                      th(class="text-center") Editar Registro
                      th(class="text-center") Eliminar Registro                  
                  tbody
                    for insumo in insumos
                      tr
                        td(class="text-center")=insumo.codigoBarra
                        td(class="text-center")=insumo.nombreInsumo
                        td(class="text-center")=insumo.contenidoInsumo
                        td(class="text-center")=insumo.precioCompra
                        td(class="text-center")=insumo.tipoInsumo
                        td(class="text-center")=insumo.presentacionInsumo 
                        td(class="text-center")
                          a(href="/web/insumo/#{insumo.idInsumo}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Insumo")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-refresh")
                              
                        form(id="topicForm" method="post" action="/web/insumo/#{insumo.idInsumo}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idInsumo" value='#{insumo.idInsumo}')               
                          td(class="text-center")
                            a(href="/web/insumo/#{insumo.idInsumo}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Insumo")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")