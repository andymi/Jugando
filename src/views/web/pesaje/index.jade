extends ../../layout 
block content
  br
  br
  div(class="container-fluid")
    form(action='/web/pesaje/add' method="POST")
      div(class="form-group")
        label(for="fechaPesaje") Fecha del Pesaje
        input(type="text" class="form-control" id="fechaPesaje" name='fechaPesaje' value='pesaje.fechaPesaje' placeholder="Ingrese la Fecha")
      div(class="form-group")
        label(for="horaPesaje") Hora del Pesaje
        input(type="text"  class="form-control" id="horaPesaje" name='horaPesaje' value='pesaje.horaPesaje' placeholder="Ingrese el Pesaje") 
        //detalle del pesaje
      div(class="form-group")
        label(class="control-label col-sm-2" for="email") Empleado: 
        div(class="col-sm-10")  
          select(name='selectJ')
            option(value="-1" selected) Seleccione Empleado
            -for(var j=0; j < selectJ.length; j++) {
              option(value="#{selectJ[j].idEmpleado}") #{selectJ[j].nombreEmpleado}
            -}    
      button(type="submit" value="submit") Agregar Pesaje


          