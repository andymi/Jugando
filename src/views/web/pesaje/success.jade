extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Pesaje de Animales
        small
          b 
            a(href="/web/pesaje/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Pesaje") Agregar Pesaje
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Pesaje de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Pesaje de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Fecha del Pesaje
                      th(class="cell-stat text-center") Hora del Pesaje 
                      th(class="cell-stat text-center") Pesaje Total          
                      th(class="cell-stat text-center") Empleado
                      th(class="cell-stat text-center") Agregar Detalle
                      th(class="cell-stat text-center") Ver Detalle
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro                  
                  tbody
                    for pesajes in pesaje
                      tr
                        td(class="text-center")=pesajes.fechaPesaje
                        td(class="text-center")=pesajes.horaPesaje
                        td(class="text-center")=pesajes.pesajeTotal       
                        if pesajes.Empleado == null  
                          td(class="text-center") sin Empleado
                        else 
                          td(class="text-center")=pesajes.Empleado.nombreEmpleado         
                        td(class="text-center")
                          a(href="/web/detallePesaje/add/#{pesajes.idPesaje}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Agregar Detalle Pesaje")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-plus") 
                        td(class="text-center")
                          a(href="/web/detallePesaje/#{pesajes.idPesaje}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-eye")
                        td(class="text-center")
                          a(href="/web/pesaje/#{pesajes.idPesaje}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Pesaje")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/pesaje/#{pesajes.idPesaje}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idPesaje" value='#{pesajes.idPesaje}')               
                          td(class="text-center")
                            a(href="/web/pesaje/#{pesajes.idPesaje}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Pesaje")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")
                        