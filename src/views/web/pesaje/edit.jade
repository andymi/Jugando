extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Pesaje
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Editar Pesaje
    section(class="content")
      div(class="row")
        div(class="col-md-12")
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Edici√≥n del Pesaje
            form(class="form-horizontal" method="post" action="/web/pesaje/#{pesaje.idPesaje}")
              div(class="box-body")
                input(type="hidden" name="_method" value="put")
                input(type="hidden" name="idPesaje" value='#{pesaje.idPesaje}')
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="cuernos") Fecha del Pesaje:
                  div(class="col-sm-8")  
                    div(class="input-group date")
                      div(class="input-group-addon")
                        i(class="fa fa-calendar")  
                      input(type="text" class="form-control pull-right" id="datepicker" name='fechaPesaje' value='#{pesaje.fechaPesaje}' required="true")
                div(class="form-group")  
                  label(class="col-sm-4 control-label" for="horaPesaje") Hora del Pesaje:
                  div(class="col-sm-8")
                    div(class="bootstrap-timepicker")
                      div(class="input-group")
                        div(class="input-group-addon")
                          i(class="fa fa-clock-o")
                        input(type="text" class="form-control timepicker" name='horaPesaje' value='#{pesaje.horaPesaje}' required) 
                div(class="form-group")
                  label(class="control-label col-sm-4" for="email") Empleado: 
                  div(class="col-sm-8") 
                    select(name="empleadoSele" class="btn btn-default select2")
                      -for (var j=0; j < select.length; j++) {
                        if pesaje.EmpleadoIdEmpleado == select[j].idEmpleado 
                         option(value="#{select[j].idEmpleado}" selected) #{select[j].nombreEmpleado} 
                        else 
                         option(value="#{select[j].idEmpleado}") #{select[j].nombreEmpleado}
                      -}
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Editar Pesaje
                    i(class="fa fa-save") 
                  a(href="/web/pesaje" class="btn btn-default") Cancelar
                    i(class="fa fa-remove")                        