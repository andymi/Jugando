extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Herramienta
        small
          b 
            a(href="/web/herramienta/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Herramienta") Agregar Herramienta
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Herramientas Registradas
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Herramientas Registradas
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-hover")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Herramienta
                      th(class="cell-stat text-center") Vida Útil
                      th(class="cell-stat text-center") Fecha de Mantenimiento 
                      th(class="cell-stat text-center") Fecha de Creación
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro
                  
                  tbody
                    for herramienta in herramientas
                      tr
                        td(class="text-center")=herramienta.nombre
                        td(class="text-center")=herramienta.vidaUtil
                        td(class="text-center")=herramienta.mantenimiento
                        td(class="text-center")=herramienta.fechaCreacion 
                        td(class="text-center")
                          a(href="/web/herramienta/#{herramienta.idHerramienta}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Herramienta")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/herramienta/#{herramienta.idHerramienta}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idHerramienta" value='#{herramienta.idHerramienta}')               
                          td(class="text-center")
                            a(href="/web/herramienta/#{herramienta.idHerramienta}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Herramienta")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")                         