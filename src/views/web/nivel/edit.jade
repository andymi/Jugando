extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Nivel
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Editar Nivel
    section(class="content")
      div(class="row")
        div(class="col-md-12")
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Edici√≥n del Nivel
            form(class="form-horizontal" method="post" action="/web/nivel/#{nivel.idNivel}")
              div(class="box-body")                
                input(type="hidden" name="_method" value="put")
                input(type="hidden" name="idNivel" value='#{nivel.idNivel}')
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Nivel: 
                  div(class="col-sm-8")  
                    input(type="text" class="form-control" id='nivel' name='nivel' value='#{nivel.nivel}' required="true")
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Editar Nivel 
                    i(class="fa fa-refresh")
                  a(href="/web/nivel" class="btn btn-default") Cancelar
                    i(class="fa fa-remove") 