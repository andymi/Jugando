extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Muerte de Animales
        small
          b 
            a(href="/web/muertes/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Muerte") Agregar Muerte
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Muerte de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Muerte de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Fecha de la Muerte
                      th(class="cell-stat text-center") Hora de la Muerte
                      th(class="cell-stat text-center") Cantidad Total      
                      th(class="cell-stat text-center") Empleado Encargado
                      th(class="cell-stat text-center") Veterinario
                      th(class="cell-stat text-center") Agregar Detalle
                      th(class="cell-stat text-center") Ver Detalle                      
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro     
                  tbody
                    for muertess in muertes
                      tr
                        td(class="text-center")=muertess.fechaMuerte
                        td(class="text-center")=muertess.horaMuerte
                        td(class="text-center")=muertess.cantidadTotal        
                        if muertess.Empleado == null  
                          td(class="text-center") sin Empleado
                        else 
                          td(class="text-center")=muertess.Empleado.nombreEmpleado 
                        if muertess.Proveedor == null  
                          td(class="text-center") sin Proveedor
                        else 
                          td(class="text-center")=muertess.Proveedor.nombreProveedor         
                        td(class="text-center")          
                          a(href="/web/detalleMuerte/add/#{muertess.idMuerte}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Agregar Detalle Muerte")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-plus") 
                        td(class="text-center")
                          a(href="/web/detalleMuerte/#{muertess.idMuerte}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-eye")
                        td(class="text-center")
                          a(href="/web/muertes/#{muertess.idMuerte}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Muertes")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/muertes/#{muertess.idMuerte}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idMuerte" value='#{muertess.idMuerte}')               
                          td(class="text-center")
                            a(href="/web/muertes/#{muertess.idMuerte}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Muertes")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")