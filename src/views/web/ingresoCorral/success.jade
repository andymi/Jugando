extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Ingreso de Empleados al Corral
        small
          b 
            a(href="/web/ingresoCorral/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Ingreso") Agregar Ingreso del Empleado
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Ingreso de Empleados 
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Ingreso de Empleados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Fecha de Ingreso     
                      th(class="cell-stat text-center") Hora de Ingreso
                      th(class="cell-stat text-center") Nombre del Empleado                      
                      th(class="cell-stat text-center") Observación
                      th(class="cell-stat text-center") Fecha de Creación
                      th(class="cell-stat text-center") Fecha de Modificación
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro
                  
                  tbody
                    for ingresoCorral in ingresoCorrales
                      tr
                        td(class="text-center")=ingresoCorral.fechaIngreso
                        td(class="text-center")=ingresoCorral.horaIngreso        
                        if ingresoCorral.Empleado == null  
                          td(class="text-center") sin empleado
                        else 
                          td(class="text-center")=ingresoCorral.Empleado.nombreEmpleado 
                        td(class="text-center")=ingresoCorral.observacionIngreso                        
                        td(class="text-center")=ingresoCorral.fechaCreacion 
                        td(class="text-center")=ingresoCorral.fechaModificacion
                        td(class="text-center")
                          a(href="/web/ingresoCorral/#{ingresoCorral.idIngresoCorral}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Ingreso Corral")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-refresh") 
                              
                        form(id="topicForm" method="post" action="/web/ingresoCorral/#{ingresoCorral.idIngresoCorral}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idIngresoCorral" value='#{ingresoCorral.idIngresoCorral}')               
                          td
                            a(href="/web/ingresoCorral/#{ingresoCorral.idIngresoCorral}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Ingreso Corral")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")