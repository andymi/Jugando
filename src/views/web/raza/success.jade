extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Raza
        small
          b 
            a(href="/web/raza/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Raza") Agregar Raza
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Razas Registradas
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Razas Registradas
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-hover")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Raza 
                      th(class="cell-stat text-center") Fecha de Creaci√≥n
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro
                  
                  tbody
                    for raza in razas
                      tr
                        td(class="text-center")=raza.raza
                        td(class="text-center")=raza.fechaCreacion 
                        td(class="text-center")
                          a(href="/web/raza/#{raza.idRaza}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Raza")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/raza/#{raza.idRaza}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idRaza" value='#{raza.idRaza}')               
                          td(class="text-center")
                            a(href="/web/raza/#{raza.idRaza}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Raza")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")                         