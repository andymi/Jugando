extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Salida de Animales
        small
          b 
            a(href="/web/salidaAnimal/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Salida") Agregar Salida de Animales
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Salida de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Salida de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Fecha de Salida
                      th(class="cell-stat text-center") Hora de Salida
                      th(class="cell-stat text-center") Cantidad de Animales Sacados
                      th(class="cell-stat text-center") Observaci√≥n 
                      th(class="cell-stat text-center") Agregar Detalle
                      th(class="cell-stat text-center") Ver Detalle
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro  
                  
                  tbody
                    for salidaAnimal in salidaAnimales
                      tr
                        td(class="text-center")=salidaAnimal.fechaSalida
                        td(class="text-center")=salidaAnimal.horaSalida
                        td(class="text-center")=salidaAnimal.cantidadSalida 
                        td(class="text-center")=salidaAnimal.observacion
                        td          
                          a(href="/web/detalleSalidaAnimal/add/#{salidaAnimal.idSalidaAnimal}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Agregar Detalle Salida")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-plus")

                        td
                          a(href="/web/detalleSalidaAnimal/#{salidaAnimal.idSalidaAnimal}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-eye") 
                        td
                          a(href="/web/salidaAnimal/#{salidaAnimal.idSalidaAnimal}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Salida Animal")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-refresh") 
                              
                        form(id="topicForm" method="post" action="/web/salidaAnimal/#{salidaAnimal.idSalidaAnimal}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idSalidaAnimal" value='#{salidaAnimal.idSalidaAnimal}')               
                          td
                            a(href="/web/salidaAnimal/#{salidaAnimal.idSalidaAnimal}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Salida Animal")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")