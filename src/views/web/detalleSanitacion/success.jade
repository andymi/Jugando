extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Detalle del Sanitación(Animales)
        small
          b 
            a(href="/web/detalleSanitacion/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Detalle") Agregar Detalle
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Detalle del Sanitación de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Detalle del Sanitación de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class=" text-center") RP del Animal
                      th(class=" text-center") Observación
                      th(class="cell-stat text-center") Agregar Detalle
                      th(class="cell-stat text-center") Ver Detalle
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro                      
                  tbody
                    for detalleSanitacion in detalleSanitaciones
                      tr
                        if detalleSanitacion.Animal == null  
                          td(class="text-center") sin Animal
                        else 
                          td(class="text-center")=detalleSanitacion.Animal.rpAnimal       
                        td(class="text-center")=detalleSanitacion.observacionSanitacion 
                        td(class="text-center")
                          a(href="/web/detalleSanitacionInsumo/add/#{detalleSanitacion.idDetalleSanitacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Agregar Detalle de la Sanitación")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-plus") 
                        td(class="text-center")
                          a(href="/web/detalleSanitacionInsumo/insumo/#{detalleSanitacion.idDetalleSanitacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle de la Sanitación(Insumo)")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-eye")
                        td(class="text-center")
                          a(href="/web/detalleSanitacion/editar/#{detalleSanitacion.idDetalleSanitacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Detalle de la Sanitación")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")

                        form(id="topicForm" method="post" action="/web/detalleSanitacion/#{detalleSanitacion.idDetalleSanitacion}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idSanitacion" value='#{detalleSanitacion.idDetalleSanitacion}')               
                          td(class="text-center")
                            a(href="/web/detalleSanitacion/#{detalleSanitacion.idDetalleSanitacion}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Detalle de la Sanitación")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")