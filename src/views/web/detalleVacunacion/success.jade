extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Detalle de la Vacunación(Animales)
        small
          b 
            a(href="/web/detalleVacunacion/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Detalle") Agregar Detalle
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Detalle de la Vacunación de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Detalle de la Vacunación de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") RP del Animal                      
                      th(class="cell-stat text-center") Certificado Nº
                      th(class="cell-stat text-center") Observación           
                      th(class="cell-stat text-center") Agregar Detalle
                      th(class="cell-stat text-center") Ver Detalle
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro                       
                  tbody
                    for detalleVacunacion in detalleVacunaciones
                      tr
                        if detalleVacunacion.Animal == null  
                          td(class="text-center") sin Animal
                        else 
                          td(class="text-center")=detalleVacunacion.Animal.rpAnimal 
                        td(class="text-center")=detalleVacunacion.numeroCertificado
                        td(class="text-center")=detalleVacunacion.observacion       
                               
                        td(class="text-center")
                          a(href="/web/detalleVacunacionInsumo/add/#{detalleVacunacion.idDetalleVacunacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Agregar Detalle de la Vacunación(Insumo)")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-plus") 
                        td(class="text-center")
                          a(href="/web/detalleVacunacionInsumo/insumo/#{detalleVacunacion.idDetalleVacunacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle de la Vacunación(Insumo)")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-eye")
                        td(class="text-center")
                          a(href="/web/detalleVacunacion/editar/#{detalleVacunacion.idDetalleVacunacion}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Detalle de la Vacunación")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh") 
                              
                        form(id="topicForm" method="post" action="/web/detalleVacunacion/#{detalleVacunacion.idDetalleVacunacion}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idPesaje" value='#{detalleVacunacion.idDetalleVacunacion}')               
                          td(class="text-center")
                            a(href="/web/detalleVacunacion/#{detalleVacunacion.idDetalleVacunacion}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Detalle de la Vacunación")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")