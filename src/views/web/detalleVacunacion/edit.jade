extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Detalle de la Vacunación(Animales)
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Editar Detalle de la Vacunación
    section(class="content")
      div(class="row")
        div(class="col-md-12")
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Edición del Detalle de la Vacunación
            form(class="form-horizontal" method="post" action="/web/detalleVacunacion/#{detalleVacunacion.idDetalleVacunacion}")
              div(class="box-body")
                input(type="hidden" name="_method" value="put")
                input(type="hidden" name="idDetalleVacunacion" value='#{detalleVacunacion.idDetalleVacunacion}')

                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") RP Animal: 
                  div(class="col-sm-8")
                    select(name="animalSele" class="btn btn-default select2")
                          -for (var j=0; j < select.length; j++) {
                            if detalleVacunacion.AnimalIdAnimal == select[j].idAnimal 
                             option(value="#{select[j].idAnimal}" selected) #{select[j].rpAnimal} 
                            else 
                             option(value="#{select[j].idAnimal}") #{select[j].rpAnimal}
                          -}

                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Certificado Nº: 
                  div(class="col-sm-8")
                    input(type="text" class="form-control" id='numeroCertificado' name='numeroCertificado' value='#{detalleVacunacion.numeroCertificado}' required="true")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Observación: 
                  div(class="col-sm-8")
                    input(type="text" class="form-control" id='observacion' name='observacion' value='#{detalleVacunacion.observacion}' required="true")
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Editar  
                    i(class="fa fa-refresh")
                  a(href="/web/vacunacion" class="btn btn-default") Cancelar
                    i(class="fa fa-remove")