extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Extravío de Animales
        small
          b 
            a(href="/web/extraviado/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Extravío") Agregar Extravío
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Extravío de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Extravío de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Fecha de Extravío
                      th(class="cell-stat text-center") Hora de Extravío 
                      th(class="cell-stat text-center") Lugar de Extravío 
                      th(class="cell-stat text-center") Cantidad Total      
                      th(class="cell-stat text-center") Empleado
                      th(class="cell-stat text-center") Agregar Detalle
                      th(class="cell-stat text-center") Ver Detalle
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro
                  
                  tbody
                    for extraviados in extraviado
                      tr
                        td(class="text-center")=extraviados.fechaExtraviado
                        td(class="text-center")=extraviados.horaExtraviado 
                        td(class="text-center")=extraviados.lugarExtraviado
                        td(class="text-center")=extraviados.cantidadTotal
                        if extraviados.Empleado == null  
                          td(class="text-center") sin Empleado
                        else 
                          td(class="text-center")=extraviados.Empleado.nombreEmpleado         
                        td(class="text-center")
                          a(href="/web/detalleExtraviado/add/#{extraviados.idExtraviado}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Agregar Detalle Extraviado")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-plus")        
                        td(class="text-center")
                          a(href="/web/detalleExtraviado/#{extraviados.idExtraviado}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-eye")
                        td(class="text-center")
                          a(href="/web/extraviado/#{extraviados.idExtraviado}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Extraviado")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/extraviado/#{extraviados.idExtraviado}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idExtraviado" value='#{extraviados.idExtraviado}')               
                          td
                            a(href="/web/extraviado/#{extraviados.idExtraviado}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Extraviado")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")