extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Traslado de Animales
        small
          b 
            a(href="/web/traslado/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Traslado") Agregar Traslado
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Traslado de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Traslado de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Fecha de Traslado          
                      th(class="cell-stat text-center") Número RUA
                      th(class="cell-stat text-center") Marca del Auto          
                      th(class="cell-stat text-center") Ciudad
                      th(class="cell-stat text-center") Nombre del Empleado      
                      th(class="cell-stat text-center") Número de Compra
                      th(class="text-center") Ver Detalle
                      th(class="text-center") Eliminar Registro
                  
                  tbody
                    for traslados in traslado
                      tr
                        td(class="text-center")=traslados.fechaTraslado  
                        td(class="text-center")=traslados.numeroRUA
                        td(class="text-center")=traslados.marcaAuto
                        if traslados.Ciudad == null  
                          td(class="text-center") sin Ciudad
                        else 
                          td(class="text-center")=traslados.Ciudad.ciudad       
                        if traslados.Empleado == null  
                          td(class="text-center") sin Empleado
                        else 
                          td(class="text-center")=traslados.Empleado.nombreEmpleado 
                        if traslados.FacturaCompra == null  
                          td(class="text-center") sin FacturaCompra
                        else 
                          td(class="text-center")=traslados.FacturaCompra.numeroCompra  
                        
                        td
                          a(href="/web/detalleTraslado/#{traslados.idTraslado}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-eye") 
                        form(id="topicForm" method="post" action="/web/traslado/#{traslados.idTraslado}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idTraslado" value='#{traslados.idTraslado}')               
                          td
                            a(href="/web/traslado/#{traslados.idTraslado}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Traslado")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")