extends ../../layout 
block content  
  div(class="content-wrapper")
    section(class="content-header")
      h1 Inicio
        small Página Principal
      ol(class="breadcrumb")
        li
          a(href="#") 
            i(class="fa fa-dashboard") Inicio
        li(class="active") Página Principal
    section(class="content")
      div(class="row")
        div(class="col-lg-3 col-xs-6")
          div(class="small-box bg-aqua")
            div(class="inner")
              for stocks in stock
               h3=stocks.cantidad
              p Stock de Balanceados 
            div(class="icon")
              i(class="ion ion-bag")
            a(href="#" class="small-box-footer") Más Información
              i(class="fa fa-arrow-circle-right")
        div(class="col-lg-3 col-xs-6")
          div(class="small-box bg-green")
            div(class="inner")
              for stocksS in Stock2
               h3=stocksS.cantidad
              p Stock de Sal Mineral 
            div(class="icon")
              i(class="ion ion-stats-bars")
            a(href="#" class="small-box-footer") Más Información
              i(class="fa fa-arrow-circle-right")
        div(class="col-lg-3 col-xs-6")
          <!-- small box -->
          div(class="small-box bg-yellow")
            div(class="inner")
              for stocksS in Vtock3
                h3=stocksS.cantidad
              p Stock de Medicamentos
            div(class="icon")
              i(class="ion ion-person-add")
            a(href="#" class="small-box-footer") Más Información 
              i(class="fa fa-arrow-circle-right")
        div(class="col-lg-3 col-xs-6")
          div(class="small-box bg-red")
            div(class="inner")
              for stocksS in Otock4
               h3=stocksS.cantidad
              p Stock de Insumos Varios  
            div(class="icon")
              i(class="ion ion-pie-graph")
            a(href="#" class="small-box-footer") Más Información 
              i(class="fa fa-arrow-circle-right")
   
      div(class="row")
            div(class="col-md-6")
              <!-- AREA CHART -->
              div(class="box box-primary")
                div(class="box-header with-border")
                  h3(class="box-title") Area Chart
                div(class="box-body")
                  div(class="chart")
                    canvas(id="areaChart" style="height:250px")
                      //span(id="valor" value='[500, 200, 400, 100, 300, 200, 400]')
              <!-- LINE CHART -->
              div(class="box box-info")
                div(class="box-header with-border")
                  h3(class="box-title") Line Chart
                div(class="box-body")
                  div(class="chart")
                    canvas(id="lineChart" style="height:250px")
              
            div(class="col-md-6")
              <!-- DONUT CHART -->
              div(class="box box-danger")
                div(class="box-header with-border")
                  h3(class="box-title") Donut Chart
                div(class="box-body")
                    canvas(id="pieChart" style="height:250px")
              
              <!-- BAR CHART -->
              div(class="box box-success")
                div(class="box-header with-border")
                  h3(class="box-title") Bar Chart
                div(class="box-body")
                  div(class="chart")
                    canvas(id="barChart" style="height:230px")