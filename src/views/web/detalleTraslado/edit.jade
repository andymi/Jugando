form(id="topicForm" method="post" action="/web/detalleTraslado/#{detalleTraslado.idDetalleTraslado}")
  input(type="hidden" name="_method" value="put")
  input(type="hidden" name="idDetalleTraslado" value='#{detalleTraslado.idDetalleTraslado}')
  table(class="table table-bordred table-striped")
    thead
      tr
        th(class="cell-stat text-center") descripcion
        th(class="cell-stat text-center") rpAnimal
        th(class="cell-stat text-center") fechaCreacion
        th(class="cell-stat text-center") fechaModificacion
        th(class="cell-stat text-center") fechaBorrado
        th(class="cell-stat text-center") Accion
        th(class="cell-stat text-center") Accion  
    tbody
      tr
        td(class="text-center")
          input(type="text" class="form-control" id='descripcion' name='descripcion' value='#{detalleTraslado.descripcion}' required="true")
        td(class="text-center") 
          select(name="animalSele")
            -for (var j=0; j < select.length; j++) {
              if detalleTraslado.AnimalIdAnimal == select[j].idAnimal 
               option(value="#{select[j].idAnimal}" selected) #{select[j].rpAnimal} 
              else 
               option(value="#{select[j].idAnimal}") #{select[j].rpAnimal}
            -}	       
        td(class="text-center")=detalleTraslado.fechaCreacion
        td(class="text-center")=detalleTraslado.fechaModificacion
        td(class="text-center")=detalleTraslado.fechaBorrado
        td
  button(type="submit" name="commit" value="Form" class="btn btn-success btn-block") Editar Detalle Traslado 
