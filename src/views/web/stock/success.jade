extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Stock
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Stock de Insumos
        li(class="active") Tabla de Stock de Insumos Registradas
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Stock de Insumos Registradas
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-hover")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Insumo                      
                      th(class="cell-stat text-center") Cantidad
                      th(class="cell-stat text-center") Presentación
                      th(class="cell-stat text-center") Cantidad Mínima
                  
                  tbody
                    for stock in stocks
                      tr
                        if stock.Insumo == null  
                          td(class="text-center") sin Insumo
                        else 
                          td(class="text-center")=stock.Insumo.nombreInsumo
                        td(class="text-center")=stock.cantidad
                        td(class="text-center")=stock.Insumo.presentacionInsumo
                        td(class="text-center")=stock.cantidadMinima