extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Personal
        small
          b 
            a(href="/web/empleado/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Personal") Agregar Personal
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Personales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Personales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr
                      th(class="cell-stat text-center") Cédula                      
                      th(class="cell-stat text-center") Nombre
                      th(class="cell-stat text-center") Dirección
                      th(class="cell-stat text-center") Código de la Llave                      
                      th(class="cell-stat text-center") Ciudad
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro                  
                  tbody
                    for empleado in empleados
                      tr                                              
                        td(class="text-center")=empleado.cedulaEmpleado
                        td(class="text-center")=empleado.nombreEmpleado
                        td(class="text-center")=empleado.direccionEmpleado
                        td(class="text-center")=empleado.codigoLlave     
                        if empleado.Ciudad == null  
                          td(class="text-center") sin Ciudad
                        else 
                          td(class="text-center")=empleado.Ciudad.ciudad 
                        td(class="text-center")
                          a(href="/web/empleado/#{empleado.idEmpleado}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Empleado")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/empleado/#{empleado.idEmpleado}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idEmpleado" value='#{empleado.idEmpleado}')               
                          td(class="text-center")
                            a(href="/web/empleado/#{empleado.idEmpleado}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Empleado")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")