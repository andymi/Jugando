extends ../../layout 
block content
  br
  br
  div(class="container-fluid")
    form(action='/web/sanitacion/add' method="POST")
     div(class="form-group")
      label(for="fechaSanitacion") Fecha Sanitacion
      input(type="text" class="form-control" id="fechaSanitacion" name='fechaSanitacion' value='sanitacion.fechaSanitacion' placeholder="Ingrese Usuario")

     div(class="form-group")
      label(for="horaSanitacion") Hora Sanitacion
      input(type="text"  class="form-control" id="horaSanitacion" name='horaSanitacion' value='sanitacion.horaSanitacion' placeholder="Ingrese el Password")

     div(class="form-group")
        label(class="control-label col-sm-2" for="email") Empleado: 
        div(class="col-sm-10")  
          select(name='selectJ')
            option(value="-1" selected) Seleccione Empleado
            -for(var j=0; j < selectJ.length; j++) {
              option(value="#{selectJ[j].idEmpleado}") #{selectJ[j].nombreEmpleado}
            -} 
     div(class="form-group")
        label(class="control-label col-sm-2" for="email") Proveedor: 
        div(class="col-sm-10")  
          select(name='selectN')
            option(value="-1" selected) Seleccione Proveedor
            -for(var j=0; j < selectN.length; j++) {
              option(value="#{selectN[j].idProveedor}") #{selectN[j].nombreProveedor}
            -}   
     button(type="submit" value="submit") Agregar Sanitacion