form(id="topicForm" method="post" action="/web/sanitacion/#{sanitacion.idSanitacion}")
  input(type="hidden" name="_method" value="put")
  input(type="hidden" name="idSanitacion" value='#{sanitacion.idSanitacion}')
  table(class="table table-bordred table-striped")
    thead
      tr
        th(class="cell-stat text-center") idSanitacion
        th(class="cell-stat text-center") fechaSanitacion
        th(class="cell-stat text-center") horaSanitacion
        th(class="cell-stat text-center") nombreEmpleado
        th(class="cell-stat text-center") nombreProveedor
        th(class="cell-stat text-center") fechaCreacion
        th(class="cell-stat text-center") fechaModificacion
        th(class="cell-stat text-center") fechaBorrado
        th(class="cell-stat text-center") Accion
        th(class="cell-stat text-center") Accion
    tbody
        tr
          td(class="text-center")=sanitacion.idSanitacion
          
          td(class="text-center")
            //label(for="fechaSanitacion" class="control-label") Fecha Sanitacion
            input(type="text" class="form-control" id='fechaSanitacion' name='fechaSanitacion' value='#{sanitacion.fechaSanitacion}' required="true")
          
          td(class="text-center")
            //label(for="horaSanitacion" class="control-label") Hora Sanitacion
            input(type="text" class="form-control" id="horaSanitacion" name='horaSanitacion' value='#{sanitacion.horaSanitacion}' required="true")
          td(class="text-center")
            select(name="empleadoSele")
              -for (var j=0; j < selectJ.length; j++) {
                if sanitacion.EmpleadoIdEmpleado == selectJ[j].idEmpleado 
                 option(value="#{selectJ[j].idEmpleado}" selected) #{selectJ[j].nombreEmpleado} 
                else 
                 option(value="#{selectJ[j].idEmpleado}") #{selectJ[j].nombreEmpleado}
              -}
          td(class="text-center")
            select(name="proveedorSele")
              -for (var j=0; j < select.length; j++) {
                if sanitacion.ProveedorIdProveedor == select[j].idProveedor 
                 option(value="#{select[j].idProveedor}" selected) #{select[j].nombreProveedor} 
                else 
                 option(value="#{select[j].idProveedor}") #{select[j].nombreProveedor}
              -}
          
          
        
          td(class="text-center")=sanitacion.fechaCreacion
          td(class="text-center")=sanitacion.fechaModificacion
          td(class="text-center")=sanitacion.fechaBorrado
          td
            button(type="submit" name="commit" value="Form" class="btn btn-success btn-block") Editar Sanitacion 
