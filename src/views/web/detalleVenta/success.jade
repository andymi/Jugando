table(class="table table-bordred table-striped")
  thead
    tr
      th(class="cell-stat text-center") idDetalleVenta
      th(class="cell-stat text-center") descripcionVenta
      th(class="cell-stat text-center") precioVenta
      th(class="cell-stat text-center") cantidadVenta  
      th(class="cell-stat text-center") fechaCreacion
      th(class="cell-stat text-center") fechaModificacion
      th(class="cell-stat text-center") fechaBorrado
      th(class="cell-stat text-center") Accion
      th(class="cell-stat text-center") Accion
  
  tbody
    for detalleVenta in detalleVentas
      tr
        td(class="text-center")=detalleVenta.idDetalleVenta
        td(class="text-center")=detalleVenta.descripcionVenta
        td(class="text-center")=detalleVenta.precioVenta
        td(class="text-center")=detalleVenta.cantidadVenta
        td(class="text-center")=detalleVenta.fechaCreacion 
        td(class="text-center")=detalleVenta.fechaModificacion
        td(class="text-center")=detalleVenta.fechaBorrado 
        td
          a(href="/web/detalleVenta/editar/#{detalleVenta.idDetalleVenta}" class="btn btn-info" role="button")
            p(data-placement="top" data-toggle="tooltip" title="Edit")
              button(type="button" class="btn btn-info") Editar Detalle Venta 
              
        form(id="topicForm" method="post" action="/web/detalleVenta/#{detalleVenta.idDetalleVenta}")
          input(type="hidden" name="_method" value="delete")
          input(type="hidden" name="idDetalleVenta" value='#{detalleVenta.idDetalleVenta}')               
          td
            a(href="/web/detalleVenta/#{detalleVenta.idDetalleVenta}" class="btn btn-info" role="button")
              p(data-placement="top" data-toggle="tooltip" title="Delete")
                button(type="submit" name="committ" value="Form" class="btn btn-info") Borrar Detalle Venta

          
