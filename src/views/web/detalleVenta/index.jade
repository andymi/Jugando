extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Detalle de la Venta 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Agregar Detalle
    section(class="content")
      div(class="row")  
        div(class="col-md-12") 
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Detalle de la Venta
            form(class="form-horizontal" action='/web/detalleVenta/cargar' method="POST")
              div(class="box-body")
                for facturaVentas in facturaVentaJ
                  input(type="hidden" name='id' value='#{facturaVentas.idVenta}')
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Descripción Venta
                  div(class="col-sm-8")
                    input(type="text" class="form-control" id="descripcionVenta" name='descripcionVenta' placeholder="Ingrese la Descripcion")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Raza: 
                  div(class="col-sm-8")  
                    select(id="selectJ" name='selectJ' class="btn btn-default select2")
                      option(value="-1" disabled="disabled" selected) Seleccione una opción
                      -for(var j=0; j < selectJ.length; j++) {
                        option(value="#{selectJ[j].idRaza}") #{selectJ[j].raza}
                      -}
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Precio Venta
                  div(class="col-sm-8")
                    input(type="text"  class="form-control" id="precioVenta" name='precioVenta' placeholder="Ingrese el Precio") 
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Cantidad Venta
                  div(class="col-sm-8")
                    input(type="text"  class="form-control" id="cantidadVenta" name='cantidadVenta' placeholder="Ingrese la Cantidad") 
               
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Guardar
                    i(class="fa fa-save") 
                  a(href="/web/facturaVenta" class="btn btn-default") Listo
                    i(class="fa fa-check")       