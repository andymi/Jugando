extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Animal
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Editar Animal
    section(class="content")
      div(class="row")
        div(class="col-md-12")
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Edición del Animal
            form( class="form-horizontal" method="post" action="/web/animal/#{animal.idAnimal}")
              div(class="box-body")
                input(type="hidden" name="_method" value="put")
                input(type="hidden" name="idAnimal" value='#{animal.idAnimal}')
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Raza: 
                  div(class="col-sm-8")  
                    select(name="razaSele" class="btn btn-default  select2")
                      -for (var j=0; j < select.length; j++) {
                        if animal.RazaIdRaza == select[j].idRaza 
                         option(value="#{select[j].idRaza}" selected) #{select[j].raza} 
                        else 
                         option(value="#{select[j].idRaza}") #{select[j].raza}
                      -}
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="pesoAnimal") Peso:
                  div(class="col-sm-8") 
                    input(type="text" class="form-control" id="pesoInicial" name='pesoInicial' value='#{animal.pesoInicial}' required="true")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="rpAnimal") RP:
                  div(class="col-sm-8") 
                    input(type="text" class="form-control" id="rpAnimal" name='rpAnimal' value='#{animal.rpAnimal}' required="true")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="cuernos") Presencia de Cuernos:
                  div(class="col-sm-8")  
                    input(type="text" class="form-control" id='cuernos' name='cuernos' value='#{animal.cuernos}' required="true")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="cuernos") Sexo:
                  div(class="col-sm-8")  
                    input(type="text" class="form-control" id="sexoAnimal" name='sexoAnimal' value='#{animal.sexoAnimal}' required="true")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="cuernos") Etiqueta Nº:
                  div(class="col-sm-8")  
                    input(type="text" class="form-control" id="numeroTag" name='numeroTag' value='#{animal.numeroTag}' required="true")

                div(class="form-group")
                  label(class="col-sm-4 control-label" for="cuernos") Fecha de Ingreso:
                  div(class="col-sm-8")  
                    div(class="input-group date")
                      div(class="input-group-addon")
                        i(class="fa fa-calendar")  
                      input(type="text" class="form-control pull-right" id="datepicker" name='fechaIngreso' value='#{animal.fechaIngreso}' required="true")

              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Editar  
                    i(class="fa fa-refresh")
                  a(href="/web/animal" class="btn btn-default") Cancelar
                    i(class="fa fa-remove")