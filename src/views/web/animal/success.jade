extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Animal
        small
          b 
            a(href="/web/animal/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Animal") Agregar Animal
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="text-center") Raza
                      th(class="text-center") Peso Inicial
                      th(class="text-center") RP
                      th(class="text-center") Cuernos
                      th(class="text-center") Sexo
                      th(class="text-center") Etiqueta NÂº      
                      th(class="text-center") Fecha de Ingreso
                      th(class="text-center") Editar Registro
                      th(class="text-center") Imprimir Ficha
                      th(class="text-center") Eliminar Registro
                  
                  tbody
                    for animal in animales
                      tr
                        if animal.Raza == null  
                          td(class="text-center") sin raza
                        else 
                          td( class="text-center")=animal.Raza.raza 
                        
                        td(class="text-center")=animal.pesoInicial
                        td(class="text-center")=animal.rpAnimal 
                        td(class="text-center")=animal.cuernos
                        td(class="text-center")=animal.sexoAnimal 
                        td(class="text-center")=animal.numeroTag 
                        td(class="text-center")=animal.fechaIngreso
                        td(class="text-center")
                          a(href="/web/animal/#{animal.idAnimal}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Animal")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-refresh")
                        td(class="text-center")
                          a(href="/reportes/animal/#{animal.idAnimal}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Imprimir Ficha")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-print")
                              
                        form(id="topicForm" method="post" action="/web/animal/#{animal.idAnimal}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idAnimal" value='#{animal.idAnimal}')               
                          td(class="text-center")
                            a(href="/web/animal/#{animal.idAnimal}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Animal")
                                button(type="submit" name="committ" value="Form" class="btn btn-success")
                                  i(class="fa fa-remove")