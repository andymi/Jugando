form(id="topicForm" method="post" action="/web/departamento/#{departamento.idDepartamento}")
  input(type="hidden" name="_method" value="put")
  input(type="hidden" name="idDepartamento" value='#{departamento.idDepartamento}')
  table(class="table table-bordred table-striped")
    thead
      tr
        th(class="cell-stat text-center") idDepartamento
        th(class="cell-stat text-center") departamento 
        th(class="cell-stat text-center") fechaCreacion
        th(class="cell-stat text-center") fechaModificacion
        th(class="cell-stat text-center") fechaBorrado
        th(class="cell-stat text-center") Accion
        th(class="cell-stat text-center") Accion
    tbody
        tr
          td(class="text-center")=departamento.idDepartamento
          
          td(class="text-center")
            input(type="text" class="form-control" id='departamento' name='departamento' value='#{departamento.departamento}' required="true")
        
          td(class="text-center")=departamento.fechaCreacion
          td(class="text-center")=departamento.fechaModificacion
          td(class="text-center")=departamento.fechaBorrado
          td
            button(type="submit" name="commit" value="Form" class="btn btn-success btn-block") Editar Departamento 
