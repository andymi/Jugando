extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Animal
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Agregar Animal
    section(class="content")
      div(class="row")  
        div(class="col-md-12") 
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Registro Animal
            form(class="form-horizontal" action='/web/departamento/cargar' method="POST")
              div(class="box-body")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="departamento") Departamento
                  div(class="col-sm-8")
                    input(type="text" class="form-control" id="departamento" name='departamento' placeholder="Ingrese el Departamento")
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Guardar
                    i(class="fa fa-save") 
                  a(href="/web/departamento" class="btn btn-default") Cancelar
                    i(class="fa fa-remove")