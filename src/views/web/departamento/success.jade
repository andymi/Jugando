extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Departamento
        small
          b 
            a(href="/web/departamento/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Departamento") Agregar Departamento
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Departamentos Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Departamentos Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-hover")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Departamento
                      th(class="cell-stat text-center") Fecha de Creaci√≥n
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro
                  
                  tbody
                    for departamento in departamentos
                      tr
                        td(class="text-center")=departamento.departamento
                        td(class="text-center")=departamento.fechaCreacion 
                        td(class="text-center")
                          a(href="/web/departamento/#{departamento.idDepartamento}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Departamento")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/departamento/#{departamento.idDepartamento}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idDepartamento" value='#{departamento.idDepartamento}')               
                          td(class="text-center")
                            a(href="/web/departamento/#{departamento.idDepartamento}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Departamento")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                   i(class="fa fa-remove")