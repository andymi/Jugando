extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Ciudad
        small
          b 
            a(href="/web/ciudad/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Ciudad") Agregar Ciudad
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Ciudades Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Ciudades Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="text-center") Ciudad      
                      th(class="text-center") Departamento
                      th(class="text-center") Fecha de Creaci√≥n
                      th(class="text-center") Editar Registro
                      th(class="text-center") Eliminar Registro
                  
                  tbody
                    for ciudad in ciudades
                      tr
                        td(class="text-center")=ciudad.ciudad
                        if ciudad.Departamento == null  
                          td(class="text-center") sin departamento
                        else 
                          td(class="text-center")=ciudad.Departamento.departamento 
                        
                        td(class="text-center")=ciudad.fechaCreacion 
                        td(class="text-center")
                          a(href="/web/ciudad/#{ciudad.idCiudad}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Ciudad")
                              button(type="button" class="btn btn-success")
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/ciudad/#{ciudad.idCiudad}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idCiudad" value='#{ciudad.idCiudad}')               
                          td(class="text-center")
                            a(href="/web/ciudad/#{ciudad.idCiudad}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Ciudad")
                                button(type="submit" name="committ" value="Form" class="btn btn-success")
                                  i(class="fa fa-remove")