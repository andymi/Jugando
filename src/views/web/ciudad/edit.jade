extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Ciudad
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Editar Ciudad
    section(class="content")
      div(class="row")
        div(class="col-md-12")
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Edici√≥n de la Ciudad
              <!-- /.box-header -->
            form(class="form-horizontal" method="post" action="/web/ciudad/#{ciudad.idCiudad}")
              div(class="box-body")
                input(type="hidden" name="_method" value="put")
                input(type="hidden" name="idCiudad" value='#{ciudad.idCiudad}')
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Ciudad: 
                  div(class="col-sm-8")  
                    input(type="text" class="form-control" id='ciudad' name='ciudad' value='#{ciudad.ciudad}' required="true")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Departamento: 
                  div(class="col-sm-8")  
                    select(name="departamentoSele" class="btn btn-success select2")
                      -for (var j=0; j < select.length; j++) {
                        if ciudad.DepartamentoIdDepartamento == select[j].idDepartamento 
                         option(value="#{select[j].idDepartamento}" selected) #{select[j].departamento} 
                        else 
                         option(value="#{select[j].idDepartamento}") #{select[j].departamento}
                      -}
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Editar Ciudad
                    i(class="fa fa-refresh")
                  a(href="/web/ciudad" class="btn btn-default") Cancelar
                    i(class="fa fa-remove")

                    
                 