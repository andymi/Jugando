extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Consumo del Animal
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Editar Consumo
    section(class="content")
      div(class="row")
        div(class="col-md-12")
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Edici√≥n del Consumo
            form(class="form-horizontal" method="post" action="/web/consumo/#{consumo.idConsumo}")
              div(class="box-body")
                input(type="hidden" name="_method" value="put")
                input(type="hidden" name="idConsumo" value='#{consumo.idConsumo}')
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="cuernos") Fecha del Consumo:
                  div(class="col-sm-8")
                    div(class="input-group date")
                      div(class="input-group-addon")
                        i(class="fa fa-calendar")  
                      input(type="text" class="form-control pull-right" id="datepicker" name='fechaConsumo' value='#{consumo.fechaConsumo}' required="true")
                div(class="form-group")  
                  label(class="col-sm-4 control-label" for="horaConsumo") Hora del Consumo:
                  div(class="col-sm-8")
                    div(class="bootstrap-timepicker")
                      div(class="input-group")
                        div(class="input-group-addon")
                          i(class="fa fa-clock-o")
                        input(type="text" class="form-control timepicker" name='horaConsumo' value='#{consumo.horaConsumo}' required) 
                div(class="form-group")
                  label(class="control-label col-sm-4" for="email") Insumo: 
                  div(class="col-sm-8") 
                    select(name="insumoSele" class="btn btn-default select2")
                      -for (var j=0; j < select.length; j++) {
                        if consumo.InsumoIdInsumo == select[j].idInsumo 
                         option(value="#{select[j].idInsumo}" selected) #{select[j].nombreInsumo} 
                        else 
                         option(value="#{select[j].idInsumo}") #{select[j].nombreInsumo}
                      -}
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Editar Consumo
                    i(class="fa fa-save") 
                  a(href="/web/consumo" class="btn btn-default") Cancelar
                    i(class="fa fa-remove")  