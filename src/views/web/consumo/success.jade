extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Consumo del Animal
        small
          b 
            a(href="/web/consumo/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Consumo") Agregar Consumo 
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Consumos Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Consumos Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr
                      th(class="text-center") Fecha del Consumo
                      th(class="text-center") Hora del Consumo  
                      th(class="text-center") Insumo      
                      th(class="text-center") Agregar Detalle
                      th(class="text-center") Ver Detalle
                      th(class="text-center") Editar Registro
                      th(class="text-center") Eliminar Registro 
                  
                  tbody
                    for consumos in consumo
                      tr
                        td(class="text-center")=consumos.fechaConsumo
                        td(class="text-center")=consumos.horaConsumo  
                        if consumos.Insumo == null  
                          td(class="text-center") sin Insumo
                        else 
                          td(class="text-center")=consumos.Insumo.nombreInsumo               
                        td(class="text-center")
                          a(href="/web/detalleConsumo/add/#{consumos.idConsumo}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Agregar Detalle Consumo")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-plus")       
                        td(class="text-center")
                          a(href="/web/detalleConsumo/animal/#{consumos.idConsumo}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Ver Detalle")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-eye")
                        td(class="text-center")
                          a(href="/web/consumo/#{consumos.idConsumo}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Consumo")
                              button(type="button" class="btn btn-success") 
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/consumo/#{consumos.idConsumo}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idConsumo" value='#{consumos.idConsumo}')               
                          td(class="text-center")
                            a(href="/web/consumo/#{consumos.idConsumo}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Consumo")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")