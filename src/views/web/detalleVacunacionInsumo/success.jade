extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Detalle de la Vacunación(Insumos) 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Detalle de la Vacunación de Animales Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Detalle de la Vacunación de Animales Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-striped")
                  thead
                    tr(class="success")
                      th(class="cell-stat text-center") Nombre del Insumo                      
                      th(class="cell-stat text-center") Cantidad Utilizada
                      th(class="cell-stat text-center") Editar Registro
                      th(class="cell-stat text-center") Eliminar Registro 
                  tbody
                    for detalleVacunacion in detalleVacunaciones
                      tr
                        if detalleVacunacion.Insumo == null  
                          td(class="text-center") sin Insumo
                        else 
                          td(class="text-center")=detalleVacunacion.Insumo.nombreInsumo 
                        td(class="text-center")=detalleVacunacion.cantidadInsumo 
                        td(class="text-center")
                          a(href="/web/detalleVacunacionInsumo/editar/#{detalleVacunacion.idDetalleVacunacionInsumo}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Detalle de la Vacunación(Insumo)")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")

                        form(id="topicForm" method="post" action="/web/detalleVacunacionInsumo/#{detalleVacunacion.idDetalleVacunacionInsumo}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idPesaje" value='#{detalleVacunacion.idDetalleVacunacionInsumo}')               
                          td(class="text-center")
                            a(href="" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Detalle de la Vacunación(Insumo)")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")      
                               
                        
