form(id="topicForm" method="post" action="/web/usuario/#{usuario.idUsuario}")
  input(type="hidden" name="_method" value="put")
  input(type="hidden" name="idUsuario" value='#{usuario.idUsuario}')
  table(class="table table-bordred table-striped")
    thead
      tr
        th(class="cell-stat text-center") idUsuario
        th(class="cell-stat text-center") usuario 
        th(class="cell-stat text-center") pass 
        th(class="cell-stat text-center") idNivel
        th(class="cell-stat text-center") nivel
        th(class="cell-stat text-center") fechaCreacion
        th(class="cell-stat text-center") fechaModificacion
        th(class="cell-stat text-center") fechaBorrado
        th(class="cell-stat text-center") Accion
        th(class="cell-stat text-center") Accion
    tbody
        tr
          td(class="text-center")=usuario.idUsuario
          
          td(class="text-center")
            input(type="text" class="form-control" id='usuario' name='usuario' value='#{usuario.usuario}' required="true")
          td(class="text-center")
            input(type="text" class="form-control" id='pass' name='pass' value='#{usuario.pass}' required="true")
          td(class="text-center")
            select(name="nivelSele")
              -for (var j=0; j < select.length; j++) {
                if usuario.NivelIdNivel == select[j].idNivel
                 option(value="#{select[j].idNivel}" selected) #{select[j].nivel} 
                else 
                 option(value="#{select[j].idNivel}") #{select[j].nivel}
              -}
          td(class="text-center")
            select(name="nivelSeleN")
              -for (var j=0; j < selectN.length; j++) {
                if usuario.EmpleadoIdEmpleado == selectN[j].idEmpleado
                 option(value="#{selectN[j].idEmpleado}" selected) #{selectN[j].nombreEmpleado} 
                else 
                 option(value="#{selectN[j].idEmpleado}") #{selectN[j].nombreEmpleado}
              -}

          td(class="text-center")=usuario.fechaCreacion
          td(class="text-center")=usuario.fechaModificacion
          td(class="text-center")=usuario.fechaBorrado
          td
            button(type="submit" name="commit" value="Form" class="btn btn-success btn-block") Editar Usuario
