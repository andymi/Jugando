extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Usuario
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Agregar Usuario
    section(class="content")
      div(class="row")  
        div(class="col-md-12") 
          div(class="box box-success")
            div(class="box-header with-border")
              h3(class="box-title") Registro Usuario
            form(class="form-horizontal" action='/web/usuario/cargar' method="POST")
              div(class="box-body")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Usuario: 
                  div(class="col-sm-8")
                    input(type="text" class="form-control" id="usuario" name='usuario' placeholder="Ingrese el Usuario")
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Pass: 
                  div(class="col-sm-8")
                    input(type="text"  class="form-control" id="pass" name='pass' placeholder="Ingrese el Password") 
                div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Nivel: 
                  div(class="col-sm-8")  
                      select(name='selectJ' class="btn btn-default select2")
                        option(value="-1" disabled="disabled" selected) Seleccione una opción
                        -for(var j=0; j < selectJ.length; j++) {
                          option(value="#{selectJ[j].idNivel}") #{selectJ[j].nivel}
                        -}  	
                 div(class="form-group")
                  label(class="col-sm-4 control-label" for="email") Empleado: 
                  div(class="col-sm-8")    
                      select(name='selectJN' class="btn btn-default select2")
                        option(value="-1" disabled="disabled" selected) Seleccione una opción
                        -for(var j=0; j < selectJN.length; j++) {
                          option(value="#{selectJN[j].idEmpleado}") #{selectJN[j].nombreEmpleado}
                        -} 
              div(class="box-footer")
                div(class="btn-group pull-right")
                  button(type="submit" href="javascript:void(0);" class="btn btn-success") Guardar
                    i(class="fa fa-save") 
                  a(href="/web/usuario" class="btn btn-default") Cancelar
                    i(class="fa fa-remove")