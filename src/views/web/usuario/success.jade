extends ../../layout 
block content
  div(class="content-wrapper")
    section(class="content-header")
      h1 Usuario
        small
          b 
            a(href="/web/usuario/cargar")
              p(class="text-green" data-placement="top" data-toggle="tooltip" title="Agregar Usuario") Agregar Usuario
                  i(class="fa fa-save") 
      ol(class="breadcrumb")
        li
          a(href="#")
            i(class="fa fa-dashboard") Registros
        li(class="active") Tabla de Usuarios Registrados
    section(class="content")
      div(class="row")
        div(class="col-xs-12")
          div(class="box")
            div(class="box-header")
              h3(class="box-title") Tabla de Usuarios Registrados
              <!-- /.box-header -->
            div(class="box-body")
              div(class="table-responsive")
                table(id="example1" class="table table-bordered table-hover")
                  thead
                    tr(class="success")
                      th(class="text-center") Usuario
                      th(class="text-center") Pass      
                      th(class="text-center") Nivel
                      th(class="text-center") Nombre del Empleado
                      th(class="text-center") Fecha de Creaci√≥n
                      th(class="text-center") Editar Registro
                      th(class="text-center") Eliminar Registro                  
                  tbody
                    for usuario in usuarios
                      tr
                        td(class="text-center")=usuario.usuario
                        td(class="text-center")=usuario.pass
                        if usuario.Nivel == null  
                          td(class="text-center") sin usuario
                        else 
                          td(class="text-center")=usuario.Nivel.nivel

                        if usuario.Empleado == null  
                          td(class="text-center") sin usuario
                        else 
                          td(class="text-center")=usuario.Empleado.nombreEmpleado
                        td(class="text-center")=usuario.fechaCreacion 
                        td(class="text-center")
                          a(href="/web/usuario/#{usuario.idUsuario}" class="btn btn-success" role="button")
                            p(data-placement="top" data-toggle="tooltip" title="Editar Usuario")
                              button(type="button" class="btn btn-success")  
                                i(class="fa fa-refresh")
                        form(id="topicForm" method="post" action="/web/usuario/#{usuario.idUsuario}")
                          input(type="hidden" name="_method" value="delete")
                          input(type="hidden" name="idUsuario" value='#{usuario.idUsuario}')               
                          td(class="text-center")
                            a(href="/web/usuario/#{usuario.idUsuario}" class="btn btn-success" role="button")
                              p(data-placement="top" data-toggle="tooltip" title="Borrar Usuario")
                                button(type="submit" name="committ" value="Form" class="btn btn-success") 
                                  i(class="fa fa-remove")